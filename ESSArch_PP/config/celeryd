# Names of nodes to start
#   most will only start one node:
CELERYD_NODES="workerepp workereppvalidation workereppfileoperation"

# Absolute or relative path to the 'celery' command:
CELERY_BIN="/ESSArch/pd/python/bin/celery"

# App instance to use
CELERY_APP="config"

# Where to chdir at start.
CELERYD_CHDIR="/ESSArch/pd/python/lib/python2.7/site-packages/ESSArch_PP"
#CELERYD_CHDIR="/ESSArch/alpha/epp3/ESSArch_EPP/ESSArch_PP"

# Extra command-line arguments to the worker
CELERYD_OPTS="-Q:workerepp celery -c:workerepp 4 -Q:workereppvalidation validation -c:workereppvalidation 4 -Q:workereppfileoperation file_operation -c:workereppfileoperation 4 --broker=amqp://guest:guest@localhost:5672/epp -Ofair --autoreload"

# %N will be replaced with the first part of the nodename.
CELERYD_LOG_LEVEL=INFO
CELERYD_LOG_FILE="/ESSArch/log/celery_%N.log"
CELERYD_PID_FILE="/ESSArch/log/proc/celery_%N.pid"

# Workers should run as an unprivileged user.
CELERYD_USER="arch"
CELERYD_GROUP="arch"

# CELERYBEAT configuration
CELERYBEAT_LOG_LEVEL=INFO
CELERYBEAT_LOG_FILE="/ESSArch/log/celerybeat.log"
CELERYBEAT_PID_FILE="/ESSArch/log/proc/celerybeat.pid"
CELERYBEAT_USER=${CELERYD_USER}
CELERYBEAT_GROUP=${CELERYD_GROUP}
CELERYBEAT_CHDIR=${CELERYD_CHDIR}
